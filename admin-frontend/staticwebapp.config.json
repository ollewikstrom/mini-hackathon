{
	"routes": [
		{
			"route": "/api/*",
			"allowedRoles": ["anonymous"]
		},
		{
			"route": "/*",
			"allowedRoles": ["anonymous"]
		}
	],
	"navigationFallback": {
		"rewrite": "/index.html"
	},

	"platform": {
		"apiRuntime": "node:18"
	},
	"globalHeaders": {
		"Access-Control-Allow-Origin": "*",
		"Access-Control-Allow-Methods": "GET, POST, OPTIONS"
	}
}
